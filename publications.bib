@InProceedings{scabora2021sharq,
  author    = {Scabora, Lucas C and Spadon, Gabriel and Cazzolato, Mirela T and Kaster, Daniel S and Traina, Agma JM and Rodrigues-Jr, Jose F and Traina-Jr, Caetano},
